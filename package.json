{
  "name": "agentrules",
  "description": "Presets for agentic tools",
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "packageManager": "bun@1.3.2",
  "scripts": {
    "build": "turbo run build",
    "check": "biome check --write",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules .turbo"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "turbo": "^2.6.1",
    "ultracite": "6.3.0"
  },
  "catalog": {
    "@types/node": "22.10.2",
    "@types/bun": "1.3.2",
    "typescript": "5.7.2",
    "zod": "^4.1.12"
  }
}
