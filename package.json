{
  "name": "agentrules",
  "description": "Rules for agentic tools",
  "version": "0.0.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "bun@1.3.3",
  "scripts": {
    "build": "turbo run build",
    "deploy:docs": "bun --cwd apps/docs deploy",
    "check": "biome check --write",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "changeset": "changeset",
    "version": "changeset version && bun scripts/sync-lockfile-versions.ts",
    "release": "bun run build && bun run release:publish",
    "release:publish": "bun scripts/release-publish.ts"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.4",
    "@changesets/cli": "^2.29.7",
    "@types/bun": "^1.3.3",
    "alchemy": "catalog:",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "turbo": "^2.6.1",
    "ultracite": "6.3.0"
  },
  "catalog": {
    "@types/node": "22.10.2",
    "@types/bun": "1.3.3",
    "alchemy": "0.78.0",
    "typescript": "5.7.2",
    "zod": "^4.1.12"
  }
}
